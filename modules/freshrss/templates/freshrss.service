[Unit]
Description=runs freshrss
After=network.target

[Service]
ExecStart=/usr/bin/podman run --rm -p 8080:80 -e TZ=America/New_York -e 'CRON_MIN=1,31' -v freshrss_data:<%= @data_dir %>/data -v freshrss_extensions:<%= @data_dir %>/extensions --name freshrss freshrss/freshrss
ExecStop=/usr/bin/podman stop freshrss
Restart=always

[Install]
WantedBy=default.target
